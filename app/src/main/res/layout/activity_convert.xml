<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#383636"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/convertlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- TextView sẽ căn giữa -->

        <TextView
            android:id="@+id/tvconvert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Convert"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginStart="25dp"
            />  <!-- Đây là điểm cần thêm để TextView chiếm không gian còn lại -->

        <!-- ImageView đặt ở góc phải -->
        <ImageView
            android:id="@+id/imglichsu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/outline_contract_24"
            android:layout_gravity="end"
            app:tint="@color/white"
            android:layout_marginEnd="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/money1"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgvietnam"
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon_vietnam" />

        <TextView
            android:id="@+id/tvmoney1"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_weight="9"
            android:text=""
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btnngancach"
        android:layout_width="400dp"
        android:layout_height="2dp"
        android:text=""
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        />

    <LinearLayout
        android:id="@+id/money2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgusa"
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon_usa"
            android:layout_marginTop="7dp"
            />

        <TextView
            android:id="@+id/tvmoney2"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_weight="9"
            android:text=""
            android:textColor="@color/white"
            android:layout_marginTop="7dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/api"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvapi"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/imgrefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:tint="@color/white"
            app:srcCompat="@drawable/refresh"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <ImageButton
            android:id="@+id/btnchange"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:background="@drawable/custom_button2"
            android:src="@drawable/change"
            app:backgroundTint="@null"
            app:tint="@color/white" />

        <Button
            android:id="@+id/btnc"
            style="@style/buttonNumber"
            android:background="@drawable/custom_button2"
            android:text="C"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btne"
            style="@style/buttonNumber"
            android:background="@drawable/custom_button2"
            android:text="E"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btndiv"
            style="@style/buttonNumber"
            android:background="@drawable/custom_button2"
            android:text="/"
            app:backgroundTint="@null" />
    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/btn7"
            style="@style/buttonNumber"
            android:background="@drawable/custom_button1"
            android:text="7"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn8"
            style="@style/buttonNumber"
            android:background="@drawable/custom_button1"
            android:text="8"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn9"
            style="@style/buttonNumber"
            android:background="@drawable/custom_button1"
            android:text="9"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnmul"
            style="@style/buttonNumber"
            android:background="@drawable/custom_button2"
            android:text="X"
            app:backgroundTint="@null" />
    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/btn4"
            style="@style/buttonNumber"
            android:background="@drawable/custom_button1"
            android:text="4"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn5"
            style="@style/buttonNumber"
            android:background="@drawable/custom_button1"
            android:text="5"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn6"
            style="@style/buttonNumber"
            android:background="@drawable/custom_button1"
            android:text="6"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnsub"
            style="@style/buttonNumber"
            android:background="@drawable/custom_button2"
            android:text="-"
            app:backgroundTint="@null" />
    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/btn1"
            style="@style/buttonNumber"
            android:background="@drawable/custom_button1"
            android:text="1"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn2"
            style="@style/buttonNumber"
            android:background="@drawable/custom_button1"
            android:text="2"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn3"
            style="@style/buttonNumber"
            android:background="@drawable/custom_button1"
            android:text="3"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnadd"
            style="@style/buttonNumber"
            android:background="@drawable/custom_button2"
            android:text="+"
            app:backgroundTint="@null" />
    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/btn0"
            style="@style/buttonNumber"
            android:background="@drawable/custom_button1"
            android:text="0"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btndot"
            style="@style/buttonNumber"
            android:background="@drawable/custom_button1"
            android:text=","
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnpercent"
            style="@style/buttonNumber"
            android:background="@drawable/custom_button1"
            android:text="%"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnequal"
            style="@style/buttonNumber"
            android:background="@drawable/custom_button2"
            android:text="="
            app:backgroundTint="@null" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/bottomnavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_menu"
        android:background="@color/black"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:itemIconSize="20dp" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>